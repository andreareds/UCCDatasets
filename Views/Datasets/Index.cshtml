@*@model IEnumerable<UCC_Datasets.Models.Dataset>*@
@model UCC_Datasets.Models.DatasetCategoryViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>All Datasets</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="Datasets" asp-action="Index" method="get">
    <p>
        Keyword: <select asp-for="DatasetCategory" asp-items="Model.Categories">
            <option value="">All</option>
        </select>

        Dataset Name: <input type="text" name="id" />
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Datasets[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Datasets[0].Available)
            </th>
            <th>
                Date Creation
            </th>
            <th>
                Last Modified
            </th>
            <th>
                Author
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Datasets) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Available)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastModified)
            </td>
            <td>
                <a href="mailto:" + @Html.DisplayFor(modelItem => item.IdUserNavigation.Email) )>@Html.DisplayFor(modelItem => item.IdUserNavigation.Email)</a>
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.IdDataset">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>
